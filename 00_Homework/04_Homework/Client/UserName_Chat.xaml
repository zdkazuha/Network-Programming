<Window x:Class="Client.UserName_Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="UserName_Chat" Height="150" Width="350">
    <Grid>
        <Label Content="Введіть і'мя користувача :: " Margin="5,5,0,10" FontSize="20" ></Label>
        <TextBox Name="userName" Width="240" Height="30" HorizontalAlignment="Left" FontSize="17" VerticalContentAlignment="Center" Margin="10"></TextBox>
        <Button Click="Login" FontSize="20" Content="Увійти" Width="70" Height="30"   HorizontalAlignment="Right" Margin="10"></Button>
    </Grid>
</Window>
