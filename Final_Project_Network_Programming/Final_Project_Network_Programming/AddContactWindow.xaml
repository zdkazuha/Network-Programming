<Window x:Class="Final_Project_Network_Programming.AddContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_Project_Network_Programming"
        mc:Ignorable="d"
        Title="AddContactWindow" Height="200" Width="335" >
    <Grid>
        <Label Width="310" Height="35" Margin="5 10 0 0" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left" >Введіть і`мя користувача ::</Label>
        <TextBox Name="UserNameBox" Width="300" Height="25" Margin="10 40 0 0" Background="#FFEDEAEA" FontSize="17" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" ></TextBox>

        <Label Width="310" Height="35" Margin="5 65 0 0" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left" >Введіть кастомне і`мя користувача ::</Label>
        <TextBox Name="CustomUserNameBox" Width="300" Height="25" Margin="10 95 0 0" Background="#FFEDEAEA" FontSize="17" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" ></TextBox>

        <Button
            Click="AddContactBtn"
            Width="300" 
            Height="30"
            FontSize="18"
            FontWeight="Bold"
            Content="Add Contact"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="10 0 0 5"
            Background="#FF00E200"
            ></Button>
    </Grid>
</Window>
