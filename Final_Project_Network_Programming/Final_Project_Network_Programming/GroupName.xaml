<Window x:Class="Final_Project_Network_Programming.GroupName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_Project_Network_Programming"
        mc:Ignorable="d"
        Title="GroupName" Height="160" Width="300">
    <Grid>
        <Label 
            Width="230" 
            Height="35" 
            Margin="5 10 0 0" 
            FontSize="18" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Left" 
            >Введіть назву групи ::</Label>
        
        <TextBox 
            Name="groupNameBox"
            Width="264" 
            Height="25" 
            Margin="10 45 0 0" 
            Background="#FFEDEAEA" 
            FontSize="18" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            HorizontalContentAlignment="Left" 
            VerticalContentAlignment="Bottom" 
            ></TextBox>

        <Button
            Click="JointheGroupBtn"
            Width="264"
            Height="30"
            Margin="10 0 10 10"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="Join the Group"
            Background="#FF5BF73C"
            ></Button>
    </Grid>
</Window>
