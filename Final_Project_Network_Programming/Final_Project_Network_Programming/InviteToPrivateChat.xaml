<Window x:Class="Final_Project_Network_Programming.InviteToPrivateChat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_Project_Network_Programming"
        mc:Ignorable="d"
        Title="InviteToPrivateChat" Height="200" Width="320">
    <Grid>
        <Label Width="230" Height="35" Margin="5 10 0 0" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left" >Введіть і`мя користувача ::</Label>
        <TextBox Name="usernameBox" Width="290" Height="25" Margin="10 40 0 0" Background="#FFEDEAEA" FontSize="17" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" ></TextBox>

        <Label Width="230" Height="35" Margin="5 60 0 0" FontSize="18"  VerticalAlignment="Top" HorizontalAlignment="Left" >Введіть назву чату  ::</Label>
        <TextBox Name="chatNameBox" Width="290" Height="25" Margin="10 90 0 0" Background="#FFEDEAEA" FontSize="17" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom"  ></TextBox>

        <Button Content="Invite" 
                Click="InviteBtn" 
                Width="290" 
                Height="30" 
                Margin="10 0 0 5" 
                FontSize="20" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Background="#FF5BF73C"
                ></Button>
    </Grid>
</Window>
