<Window x:Class="Final_Project_Network_Programming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_Project_Network_Programming"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Label Width="110" Height="35" Margin="5 75 0 0" FontSize="19" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold">Message :: </Label>
        <TextBox Name="msgTextBox" Width="375" Height="30" Margin="110 75 0 0" FontSize="18" VerticalContentAlignment="Bottom" VerticalAlignment="Top" HorizontalContentAlignment="Left" HorizontalAlignment="Left"></TextBox>

        <ListBox Name="FilesListBox" Width="200" Height="65" ItemsSource="{Binding Files}" Margin="0 5 10 0" HorizontalAlignment="Right" VerticalAlignment="Top">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Del" Width="23" Height="15" Margin="-4 0 0 0" Padding="0 -2 0 0" Foreground="White" Background="Red" FontSize="10" Click="DeleteFile_Click"/>
                        <TextBlock Text="{Binding FilePath}" Margin="5 0 0 0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Name="Browse"
                Click="BrowseBtn"
                Content="Browse"
                Width="200" 
                Height="30" 
                Margin="0 75 10 0" 
                FontSize="20" 
                FontWeight="Bold"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
            ></Button>
        <Button Content="Send" 
                Click="SendBtn" 
                Width="80" 
                Height="30" 
                Margin="0 75 215 0" 
                FontSize="20" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                ></Button>
        <Button Content="Join" 
                Click="JoinBtn" 
                Width="80" 
                Height="30" 
                Margin="0 5 215 0" 
                FontSize="20" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Background="Green"
                Foreground="White"
                ></Button>
        <Button Content="Invite to Private Group" 
                Click="InviteToPrivateGroupBtn" 
                Width="220" 
                Height="30" 
                Margin="10 5 0 0" 
                FontSize="20" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Background="Blue"
                Foreground="White"
                ></Button>
        <Button Content="Leave" 
                Click="LeaveBtn" 
                Width="80" 
                Height="30" 
                Margin="0 40 215 0" 
                FontSize="20" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"  
                Background="Red"
                Foreground="White"
                ></Button>

        <Label Width="110" Height="40" Margin="0 120 0 0" FontSize="25" HorizontalAlignment="Center"  VerticalAlignment="Top" FontWeight="Bold">Chat</Label>
        <ListBox Name="ChatListBox" ItemsSource="{Binding Messages}" Width="764" Height="250" Margin="10 150 10 0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <Label DockPanel.Dock="Left" FontSize="15"  Content="{Binding UserName}"></Label>
                        <TextBlock TextWrapping="WrapWithOverflow" FontSize="15" VerticalAlignment="Center" DockPanel.Dock="Left" Text="{Binding Message}" ></TextBlock>
                        <Label MouseDoubleClick="OpenFileOrImage" DockPanel.Dock="Right"   FontSize="15"  Content="{Binding ImagePath}"></Label>
                        <Label DockPanel.Dock="Right"   FontSize="15"  Content="{Binding Time}"></Label>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
    </Grid>
</Window>
