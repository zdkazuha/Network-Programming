<Window x:Class="Final_Project_Network_Programming.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_Project_Network_Programming"
        mc:Ignorable="d"
        Title="Registration" Height="260" Width="330">
    <Grid>
        <Label Width="230" Height="35" Margin="5 10 0 0" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left" >Введіть і`мя користувача ::</Label>
        <TextBox Name="usernameBox" Width="290" Height="25" Margin="10 40 0 0" Background="#FFEDEAEA" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" ></TextBox>

        <Label Width="230" Height="35" Margin="5 65 0 0" FontSize="18"  VerticalAlignment="Top" HorizontalAlignment="Left" >Введіть пароль ::</Label>
        <TextBox Name="passwordOneBox" Width="290" Height="25" Margin="10 95 0 0" Background="#FFEDEAEA" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom"  ></TextBox>

        <Label Width="230" Height="35" Margin="5 120 0 0" FontSize="18"  VerticalAlignment="Top" HorizontalAlignment="Left" >Введіть пароль ще раз ::</Label>
        <TextBox Name="passwordTwoBox" Width="290" Height="25" Margin="10 150 0 0" Background="#FFEDEAEA" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom"  ></TextBox>

        <Button Content="Registory" 
                Click="RegistoryBtn" 
                Width="290" 
                Height="31" 
                Margin="10 0 0 10" 
                FontSize="20" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Background="#FF5BF73C"
                ></Button>
    </Grid>
</Window>
