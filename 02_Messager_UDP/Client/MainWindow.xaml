<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Padding" Value="20,5"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" >
            <Label DockPanel.Dock="Left" 
                   FontSize="15"
                   FontWeight="Bold"
                   Margin="10"
                   >Message :</Label>
            <Button DockPanel.Dock="Right" 
                Foreground="Red"
                BorderBrush="Red" 
                Background="Transparent"
                >Leave</Button>
            <Button 
                    Click="JoinBtn"
                    DockPanel.Dock="Right" 
                    Foreground="Green"
                    BorderBrush="Green"
                    Background="Transparent"
                    >Join</Button>
            <Button DockPanel.Dock="Right"
                    Click="SendBtn"
                    >Send</Button>
            <TextBox Name="msgTextBox"
                     Height="30"
                     DockPanel.Dock="Left" 
                     Margin="5,10"
                     TextWrapping="Wrap"
                     VerticalContentAlignment="Center"
                     FontSize="15" KeyDown="msgTextBoxEnter"
                     ></TextBox>
        </DockPanel>
        <TextBlock 
            DockPanel.Dock="Top" 
            FontSize="25" FontWeight="Bold"     
            HorizontalAlignment="Center"
            
            >Chat</TextBlock>
        <Button DockPanel.Dock="Bottom">Clear</Button>
        <ListBox ItemsSource="{Binding}" HorizontalContentAlignment="Stretch"  >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <Label DockPanel.Dock="Left" >Name</Label>
                        <Label DockPanel.Dock="Right" Content="{Binding Time}"></Label>
                        <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" DockPanel.Dock="Left" Text="{Binding Message}" ></TextBlock>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
