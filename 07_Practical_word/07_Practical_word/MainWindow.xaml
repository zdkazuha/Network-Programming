<Window x:Class="_07_Practical_word.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07_Practical_word"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="650">
    <Grid>
        <Label  Content="Folders:" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 10 0 0" FontSize="18"></Label>
        <ListBox Name="listFolder" Margin="10 30 0 0" Width="200" Height="320" HorizontalAlignment="Left" FontSize="18"></ListBox>

        <Label  Content="Messages:" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 10 265 0" FontSize="18"></Label>
        <ListBox Name="listMessages" Margin="0 30 10 0" Width="350" Height="320" HorizontalAlignment="Right" FontSize="12"></ListBox>


    </Grid>
</Window>
