<Window x:Class="_07_Practical_word.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07_Practical_word"
        mc:Ignorable="d"
        Title="Login" Height="160" Width="315">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top" FontSize="15"/>
        <TextBox Name="UserName" Width="200" Height="25" Margin="90 17 0 0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="15"/>

        <Label Content="Password:" HorizontalAlignment="Left" Margin="5,40,0,0" VerticalAlignment="Top" FontSize="15"/>
        <TextBox Name="Password" Width="200" Height="25" Margin="90 47 0 0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="15"/>

        <Button Click="LoginBtn" Width="285" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5 40 5 10" Padding="0 0 0 0" FontSize="20">Login</Button>
        
    </Grid>
</Window>
