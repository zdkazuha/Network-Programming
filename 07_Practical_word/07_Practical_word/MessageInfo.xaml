<Window x:Class="_07_Practical_word.MessageInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07_Practical_word"
        mc:Ignorable="d"
        Title="MessageInfo" Height="350" Width="385">
    <Grid>
        <Label Width="50" Height="30" FontSize="15" Margin="5 5 0 0" HorizontalAlignment="Left" VerticalAlignment="Top">From:</Label>
        <TextBox Name="FromBox" Width="300" Height="25" FontSize="15" Margin="60 5 0 0" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>

        <Label Width="50" Height="30" FontSize="15" Margin="5 40 0 0" HorizontalAlignment="Left" VerticalAlignment="Top">To:</Label>
        <TextBox Name="ToBox" Width="300" Height="25" FontSize="15" Margin="60 40 0 0" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>

        <ListBox Name="ListSubject" Width="350" Height="250" FontSize="15" Margin="10 70 0 0" HorizontalAlignment="Left" VerticalAlignment="Top" ></ListBox>

    </Grid>
</Window>
